{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "GODZ",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$HOME/**", "$APP/**", "$TEMP/**", "$VIDEO/**"]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.godz.brollcreator",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "linux": {
        "appimage": {
          "bundleMediaFramework": true
        },
        "deb": {
          "depends": []
        }
      },
      "shortDescription": "Create B-Roll videos easily",
      "longDescription": "GODZ helps you create B-Roll composite videos from YouTube links or local files. Perfect for content creators who want to avoid copyright issues."
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "GODZ - B-Roll Creator",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 650,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ]
  }
}
